  "keywords": [
    "react",
    "tooltip",
    "portal",
    "popup"
  ],
  "homepage": "https://oleggrishechkin.github.io/react-tooltpz",
  "license": "MIT",
  "author": {
    "name": "Oleg Grishechkin",
    "email": "oleggrishechkin@gmail.com",
    "url": "https://github.com/oleggrishechkin"
  },
  "files": [
    "lib/*.js"
  ],
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/oleggrishechkin/react-tooltpz"
  },
  "scripts": {
    "start": "cross-env NODE_ENV=development webpack-dev-server --mode development --hot",
