{
  "name": "react-tooltpz",
  "version": "2.0.1",
  "description": "Delicious tooltip component with zero dependencies",
  "keywords": [
    "react",
    "tooltip",
    "portal",
    "popup"
  ],
  "homepage": "https://oleggrishechkin.github.io/react-tooltpz",
  "license": "MIT",
  "author": {
    "name": "Oleg Grishechkin",
    "email": "oleggrishechkin@gmail.com",
    "url": "https://github.com/oleggrishechkin"
  },
  "files": [
    "lib/*.js"
  ],
  "main": "lib/index.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/oleggrishechkin/react-tooltpz"
  },
  "scripts": {
    "start": "cross-env NODE_ENV=development webpack-dev-server --mode development --hot",
    "build": "rimraf dist && cross-env NODE_ENV=production webpack --mode production",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d dist",
    "prepublish": "rimraf lib && babel src -d lib"
  },
  "devDependencies": {
    "@babel/cli": "^7.7.5",
    "@babel/core": "^7.8.7",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.0.6",
    "configs-og": "^0.2.0",
    "cross-env": "^6.0.3",
    "css-loader": "^3.3.0",
    "eslint": "^6.8.0",
    "gh-pages": "2.1.1",
    "html-webpack-plugin": "^3.2.0",
    "husky": "^4.2.3",
    "jest": "^24.9.0",
    "lint-staged": "^10.0.8",
    "prettier": "^1.18.2",
    "react": "^16.10.2",
    "react-dom": "^16.10.2",
    "rimraf": "^3.0.0",
    "style-loader": "^1.1.3",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.10",
    "webpack-dev-server": "^3.9.0"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "react-dom": ">=16.8.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "eslintConfig": {
    "extends": "./node_modules/configs-og/.eslintrc.js"
  },
  "prettier": "configs-og/prettier.config.js",
  "babel": {
    "extends": "configs-og/babel.config.js"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.(js|jsx)": [
      "eslint --quiet"
    ]
  }
}
